<Window x:Class="Курсовая.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" >
    <Grid Background="Bisque">

        <TextBlock x:Name="OUT" Text="{Binding Code}" FontSize="35" FontFamily="Times New Roman" Height="50" Width="150" Margin="315,90,325,250" TextAlignment="Center"></TextBlock>
        <TextBox x:Name="INPUT" Height="40" Width="140"  Background="Pink" FontSize="30" TextAlignment="Center" MaxLength="4" TextChanged="TextBox_TextChanged"></TextBox>
        <TextBlock FontSize="20" Background="Firebrick" FontFamily="Times New Roman" Height="30" Width="150" Margin="600,310,40,20" TextAlignment="Center" >Ошибки: <TextBlock Foreground="LightBlue" x:Name="Miss"></TextBlock></TextBlock>
        <TextBlock FontSize="20" Background="Firebrick" FontFamily="Times New Roman" Height="30" Width="150" Margin="600,270,40,60" TextAlignment="Center" >Время: <TextBlock Foreground="LightBlue" x:Name="timer"></TextBlock></TextBlock>
        
    </Grid>
</Window>
